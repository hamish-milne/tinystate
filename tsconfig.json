{
  "compilerOptions": {
    "strict": true,
    "isolatedModules": true,
    "verbatimModuleSyntax": true,
    "skipLibCheck": true,
    "composite": true,
    "forceConsistentCasingInFileNames": true,
    "erasableSyntaxOnly": true,
    "target": "es2019",
    "module": "node18",
    "moduleResolution": "node16",
    "lib": ["es2019", "dom"],
    "types": ["vitest/importMeta"],
    "emitDeclarationOnly": true,
    "declaration": true,
    "rootDir": "src",
    "declarationDir": "dist"
  },
  "include": ["src"]
}

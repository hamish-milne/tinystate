{
  "$schema": "https://biomejs.dev/schemas/2.3.4/schema.json",
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100
  },
  "html": {
    "formatter": {
      "enabled": true
    }
  },
  "linter": {
    "enabled": true,
    "rules": {
      "suspicious": {
        "noConfusingLabels": {
          "level": "warn",
          "options": {
            "allowedLabels": ["TEST"]
          }
        }
      },
      "correctness": {
        "noUnusedLabels": "off",
        "noConstructorReturn": "off"
      }
    }
  },
  "assist": { "actions": { "source": { "organizeImports": "on" } } },
  "files": {
    "includes": [
      "**",
      "!**/.pnp*",
      "!node_modules/**",
      "!dist/**",
      "!.yarn/**",
      "!**/.vscode/extensions.json"
    ]
  }
}
